<%- model_class = Holiday -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= link_to holiday.id, holiday_path(holiday) %></td>
        <td><%= holiday.start_date %></td>
        <td><%= holiday.end_date %></td>
        <td><%= holiday.note %></td>
        <td><%= holiday.user ? holiday.user.name : "All" %></td>
        <td><%=l holiday.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_holiday_path(holiday), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      holiday_path(holiday),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Filter</h2>
<%= form_tag holidays_path, method: :get, :html => { :class => 'form-horizontal' } do %>
  <%= label_tag :start_date %>
  <%= text_field_tag :start_date %>
  <%= label_tag :end_date %>
  <%= text_field_tag :end_date %>
  <%= label_tag :user %>
  <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name), include_blank: true %>
  <div class="form-actions">
    <%= button_tag :submit, :class => 'btn-primary' %>
  </div>
<% end %>

<h2>New Holiday</h2>
<%= render :partial => 'form' %>
